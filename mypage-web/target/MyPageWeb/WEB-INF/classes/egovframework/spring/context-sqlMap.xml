                <value>classpath:/sysm/sqlmap/config/${Globals.DbType}/sql-map-config-oracle-*.xml</value> 
            </list>
        </property>
        <property name="dataSource" ref="dataSource"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean> 
    
