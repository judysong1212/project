	<!-- 울주군청 공무직 및 기간제 근로자 통합관리시스템 데이타베이스 Oracle -->
	<bean id="dataSource-oracle" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${Globals.DriverClassName}"/>
		<property name="url" value="${Globals.Url}" />
		<property name="username" value="${Globals.UserName}"/>
		<property name="password" value="${Globals.Password}"/>  
	</bean>
    <!--  울주군청 공통기반 sso 연동 데이타 베이스 연결정보  -->
	 <bean id="dataSource-order" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@104.6.71.65:1526:COMM" />
		<property name="username" value="ssoview"/>
		<property name="password" value="ssolink"/>  
	</bean> 
     
       <!-- 세올부서연계 추가  -->
	<bean id="dataSource-sgpis" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1524:SGPIS" />
		<property name="username" value="pisdba"/>
		<property name="password" value="pisdba"/>  
	</bean>   
   
</beans>
