<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
						http://www.springframework.org/schema/jdbc  http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd">
	
    <bean id="egov.propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/egovframework/egovProps/globals.properties</value> 
            </list>
        </property>
    </bean>
    
	<!-- DataSource dataSource-${Globals.DbType}-->
	<alias name="dataSource-oracle" alias="dataSource" />
    <alias name="dataSource-order" alias="dataSource2" />
    <alias name="dataSource-sgpis" alias="dataSource3" />
    
	<!-- MySQL
	<bean id="dataSource-mysql" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${Globals.DriverClassName}"/>
		<property name="url" value="${Globals.Url}" />
		<property name="username" value="${Globals.UserName}"/>
		<property name="password" value="${Globals.Password}"/>
	</bean>
 -->
	<!-- Oracle -->
	<bean id="dataSource-oracle" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${Globals.DriverClassName}"/>
		<property name="url" value="${Globals.Url}" />
		<property name="username" value="${Globals.UserName}"/>
		<property name="password" value="${Globals.Password}"/>  
	</bean>
 
	 
	 <!-- 시도스케줄 사용시 -->
	<bean id="dataSource-order" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@113.0.2.12:1521:sidodb9i" />
		<property name="username" value="sidosync"/>
		<property name="password" value="sidosync"/>  
	</bean> 
	 
	
	 <!-- 세올인사랑 부서연계 추가  -->
	<bean id="dataSource-sgpis" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@113.0.2.12:1521:pis9i" />
		<property name="username" value="pisel"/>
		<property name="password" value="pisel"/>  
	</bean>   
     
   
</beans>
