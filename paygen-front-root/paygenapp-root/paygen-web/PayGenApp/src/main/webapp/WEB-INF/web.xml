	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>    
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:egovframework/egovProps/log4j.properties</param-value>
	</context-param> 
	-->
	 
	<servlet>
		<servlet-name>egovframe</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/config/egovframework/springmvc/egovframe-servlet.xml 
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>egovframe</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	 
	<!-- 엑셀저장 처리 서블릿 -->
	<servlet>
	    <servlet-name>ExportData</servlet-name>
	    <servlet-class>com.app.smrmf.core.msfmainapp.server.servlet.ExportData</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>ExportData</servlet-name>
	    <url-pattern>/paygenapp/ExportData</url-pattern>
	</servlet-mapping> 
	<!-- 파일업로드처리 서블릿 -->
    <servlet>
	    <servlet-name>FileUploadServlet</servlet-name>
	    <servlet-class>com.app.smrmf.core.msfmainapp.server.servlet.FileUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>FileUploadServlet</servlet-name>
	    <url-pattern>/paygenapp/FileUploadServlet</url-pattern>
	</servlet-mapping> 
	
